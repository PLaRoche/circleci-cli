#!/usr/bin/env bats

@test "-h should output usage" {
  run build/bin/circleci -h
  [ $status -eq 0 ]
  [ "${#lines[@]}" -gt 1 ]
}

@test "--help should output usage" {
  run build/bin/circleci --help
  [ $status -eq 0 ]
  [ "${#lines[@]}" -gt 1 ]
}

@test "-v should output version" {
  run build/bin/circleci -v
  [ $status -eq 0 ]
  [ $(expr "$output" : "v*") -ne 0 ]
}

@test "--version should output version" {
  run build/bin/circleci --version
  [ $status -eq 0 ]
  [ $(expr "$output" : "v*") -ne 0 ]
}
